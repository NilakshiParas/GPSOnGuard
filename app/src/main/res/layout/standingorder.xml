<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sorder"
    android:layout_width="fill_parent"
    android:background="@android:color/white"
    android:layout_height="fill_parent">

    <!--  Header  Starts-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:scaleType="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e1811d"
            android:gravity="center"
            android:text="Standing Order"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--  Header Ends -->

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center">

        <Button
            android:id="@+id/btn_close_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Close" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:padding="12dip">

            <TextView
                android:id="@+id/site_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/site_addr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Site Address: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/site_hrs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Site Hours :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patrol_point"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Security Patrol Point :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/barcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Barcode :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/daily_report"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Daily Report :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/keys"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Keys :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Lock/Unlock :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/site_auth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Site Authorization :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spec_req"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="Special Requirements :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- <TextView android:id="@+id/site_mgt_contact" android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="#000000"
                     android:gravity="center"
                     android:text="Site Management Contacts :" android:paddingBottom="5dp" android:textStyle="bold"/>

            <TextView android:id="@+id/non_emr_cntct" android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:textColor="#000000"
                     android:gravity="center"
                     android:text="Non Emergency Contacts:" android:paddingBottom="5dp" android:textStyle="bold"/>
                -->

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
